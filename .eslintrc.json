{
	"extends": "airbnb-base",
	"parser": "babel-eslint",
	"plugins": [
		"import",
		"html",
		"vue"
	],
	"rules": {
		"semi": [2, "never"],
		"indent": ["error", "tab"],
		"no-tabs": "off",
		"max-len": "off",
		"global-require": "off",
		"import/no-dynamic-require": "off",
		"object-curly-newline": "off"
	}
}
